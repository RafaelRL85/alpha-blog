<%= render 'shared/errors', :model=> @category %>


    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :category%>
          </div>
          <div class="col-sm-4">
            <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: "btn btn-primary btn-lrg" %>
          </div>
        </div>


    <% end %>

    <div class="col-xs-4 col-xs-offset-4">
      [<%= link_to " Cancel and go Back to articles list", articles_path %> ]
    </div>
